@model IEnumerable<ForumIT.Models.Kategoria>
@{
    ViewBag.Title = "Lista Kategorii";
}
<p>&nbsp;</p>
<div class="panel panel-default">
    <div class="panel-heading">
        <h2>Lista kategorii</h2>
    </div>
    <div class="panel-body">

        <p>
            @Html.ActionLink("Nowa kategoria", "Create", null, new { @class = "btn btn-primary" })
        </p>
        <table class="table table-striped table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NazwaKategorii)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OpisKategorii)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ikona)
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NazwaKategorii)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OpisKategorii)
                    </td>
                    <td>
                        <span class="@Html.DisplayFor(modelItem => item.Ikona)" aria-hidden="true"></span>
                    </td>
                    <td>
                        <a title="Szczegóły" href="@Url.Action("Details","Kategoria",new { id=item.IdKategorii})" class="btn btn-xs btn-default"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a>
                        <a title="Edycja" href="@Url.Action("Edit","Kategoria",new { id=item.IdKategorii})" class="btn btn-xs btn-default"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                        <a title="Kasowanie" href="@Url.Action("Delete","Kategoria",new { id=item.IdKategorii})" class="btn btn-xs btn-default"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>